<div style="padding: 10%">
<p id="notice"><%= notice %></p>

<table id="example" class="table table-striped table-bordered hover" cellspacing="2" width="100%">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Image</th>
  </tr>
  </thead>

  <tbody>
  <% @projects.each do |comment| %>
    <tr>
      <td><%= comment.Name %></td>
      <td><%= comment.Comment %></td>
      <td><%= comment.ContactInfo %></td>
      <td><%= link_to 'Show', comment %></td>
      <td><%= link_to 'Edit', edit_comment_path(comment) %></td>
      <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
<br/>
</div>